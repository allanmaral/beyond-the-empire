{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": [
      "standard",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "prettier/standard",
      "prettier/react"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "react/prop-types": "off",
      "space-before-function-paren": "off",
      "multiline-ternary": "off",
      "multiline-comment-style": "off"
    }
}
